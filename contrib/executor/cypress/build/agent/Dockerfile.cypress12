# syntax=docker/dockerfile:1
FROM cypress/included:12.17.3

# Debugging architecture detection
RUN echo "Detected architecture: $(dpkg --print-architecture)"

RUN ARCH=$(dpkg --print-architecture) && \
    if [ "$ARCH" = "amd64" ]; then \
        echo "Running Chrome installation for AMD64"; \
        echo "#deb [arch=amd64] https://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list; \
        apt update -y && apt install -y gnupg; \
        apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 32EE5355A6BC6E42; \
        echo "deb [arch=amd64] https://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list; \
        apt update -y; \
    else \
        echo "Skipping Chrome installation for ARM architecture"; \
    fi

RUN apt-get update && \
    apt-get install -y curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# run as a root in order to install to /root/cache and write to shared data volume
RUN mkdir /home/runner

WORKDIR /home/runner/

ENV DEPENDENCY_MANAGER=npm

ENTRYPOINT ["/bin/runner"]
