# syntax=docker/dockerfile:1
FROM cypress/included:12.17.3
COPY cypress /bin/runner

# Debugging architecture detection
RUN echo "Detected architecture: $(dpkg --print-architecture)"

RUN echo "#deb [arch=amd64] https://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list
RUN apt update -y && apt install -y gnupg
RUN apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 32EE5355A6BC6E42
RUN echo "deb [arch=amd64] https://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list

RUN rm /var/lib/dpkg/info/libc-bin.* && \
    apt-get update && \
    apt-get install -y curl libc-bin && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# run as a root in order to install to /root/cache and write to shared data volume
RUN mkdir /home/runner

WORKDIR /home/runner/

ENV DEPENDENCY_MANAGER=npm

ENTRYPOINT ["/bin/runner"]
