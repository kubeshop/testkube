# syntax=docker/dockerfile:1
FROM golang:1.18 as builder

WORKDIR contrib/executor/maven//build
COPY . .
ENV CGO_ENABLED=0 
ENV GOOS=linux

RUN cd contrib/executor/maven/cmd/agent;go build -o /runner -mod mod -a .

FROM maven:3.8.5-openjdk-17
COPY --from=builder /runner /bin/runner

RUN useradd -m -d /home/maven -s /bin/bash -u 1001 -r -g root maven
ENV MAVEN_CONFIG "/home/maven/.m2"
USER 1001

# do no overwrite the entrypoint
CMD ["/bin/runner"]
